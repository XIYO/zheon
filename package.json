{
	"name": "zheon",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"deploy": "pnpm build && pnpm exec wrangler deploy",
		"wrangler": "wrangler",
		"edge:test:all": "cd supabase && deno task test",
		"edge:deploy": "supabase functions deploy --project-ref iefgdhwmgljjacafqomd",
		"edge:deploy:with-secrets": "supabase secrets set --env-file=.env --project-ref iefgdhwmgljjacafqomd && supabase functions deploy --project-ref iefgdhwmgljjacafqomd",
		"edge:secrets:set": "supabase secrets set --env-file=.env --project-ref iefgdhwmgljjacafqomd",
		"edge:secrets:list": "supabase secrets list --project-ref iefgdhwmgljjacafqomd",
		"edge:format": "deno fmt supabase/functions/",
		"edge:lint": "deno lint supabase/functions/",
		"edge:check": "cd supabase/functions && for dir in */; do [ -f \"$dir/index.ts\" ] && deno check \"$dir/index.ts\"; done",
		"edge:debug": "supabase functions serve --inspect-mode --project-ref iefgdhwmgljjacafqomd",
		"edge:debug:brk": "supabase functions serve --inspect-mode brk --project-ref iefgdhwmgljjacafqomd"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.33.0",
		"@playwright/test": "^1.54.2",
		"@skeletonlabs/skeleton": "^3.1.8",
		"@skeletonlabs/skeleton-svelte": "^1.4.0",
		"@sveltejs/adapter-cloudflare": "^7.2.1",
		"@sveltejs/kit": "^2.31.1",
		"@sveltejs/vite-plugin-svelte": "^6.1.2",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.12",
		"@testing-library/jest-dom": "^6.7.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^24.3.0",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.38.1",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.9.2",
		"vite": "^7.1.2",
		"vitest": "^3.2.4",
		"wrangler": "^4.30.0"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.60.0",
		"@inlang/paraglide-js": "^2.2.0",
		"@supabase/ssr": "^0.6.1",
		"@supabase/supabase-js": "^2.55.0",
		"pretendard": "^1.3.9",
		"ws": "^8.18.3",
		"zod": "^4.0.17"
	},
	"packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
	"pnpm": {
		"onlyBuiltDependencies": [
			"@tailwindcss/oxide",
			"esbuild",
			"sharp",
			"svelte-preprocess",
			"workerd"
		]
	}
}
