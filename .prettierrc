{
  "useTabs": true,
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 100,
  "singleAttributePerLine": false,
  "htmlWhitespaceSensitivity": "ignore",
  "proseWrap": "never",
  "bracketSameLine": true,
  "plugins": ["prettier-plugin-svelte"],
  "overrides": [
  {
    "files": "*.svelte",
    "options": {
      "parser": "svelte"
    }
  }
]
}

